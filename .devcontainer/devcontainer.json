{
  "name": "BarberPro Flutter Development",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "Dart-Code.dart-test-tree",
        "streetsidesoftware.code-spell-checker",
        "GitHub.copilot"
      ],
      "settings": {
        "dart.flutterSdkPath": "/usr/local/flutter",
        "dart.lsPort": 8765
      }
    }
  },
  "postCreateCommand": "flutter pub get && flutter doctor",
  "remoteUser": "codespace",
  "forwardPorts": [
    3000,
    6379,
    5037
  ],
  "portsAttributes": {
    "3000": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "notify"
    },
    "5037": {
      "label": "ADB",
      "onAutoForward": "notify"
    }
  }
}
