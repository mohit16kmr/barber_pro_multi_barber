# BarberPro Docker Environment Configuration
# Copy to .env for Docker Compose

NODE_ENV=development
PORT=3000
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRATION=3600
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_REFRESH_EXPIRATION=2592000

# Firebase Configuration (update with your actual credentials)
FIREBASE_PROJECT_ID=barber-pro-dev
FIREBASE_PRIVATE_KEY_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_CLIENT_ID=

# Redis Configuration (docker-compose handles the connection)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Firestore Emulator (for local development)
# Uncomment to use emulator:
# FIRESTORE_EMULATOR_HOST=firestore-emulator:8080

# API Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
API_BASE_URL=http://localhost:3000

# Notifications
FCM_SERVER_KEY=
SMS_PROVIDER=none

# Logging
LOG_LEVEL=debug

# WebSocket
WEBSOCKET_CORS_ORIGIN=*
